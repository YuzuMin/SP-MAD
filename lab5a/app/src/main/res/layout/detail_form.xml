<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/details_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name" />

                    <EditText
                        android:id="@+id/restaurant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/restaurant_name"
                        android:inputType="textPersonName"
                        android:maxLength="30" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address" />

                    <EditText
                        android:id="@+id/restaurant_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/restaurant_address"
                        android:inputType="textPersonName"
                        android:maxLength="60" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tel" />

                    <EditText
                        android:id="@+id/restaurant_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/restaurant_tel"
                        android:inputType="textPersonName"
                        android:maxLength="8" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="241dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textview" />

                    <RadioGroup
                        android:id="@+id/restaurant_types"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/chinese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/chinese" />

                        <RadioButton
                            android:id="@+id/western"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/western" />

                        <RadioButton
                            android:id="@+id/indian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/indian" />

                        <RadioButton
                            android:id="@+id/indonesian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/indonesian" />

                        <RadioButton
                            android:id="@+id/korean"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/korean" />

                        <RadioButton
                            android:id="@+id/japanese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/japanese" />

                        <RadioButton
                            android:id="@+id/thai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/thai" />
                    </RadioGroup>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="@string/save"
                android:visibility="visible"
                tools:visibility="visible" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>